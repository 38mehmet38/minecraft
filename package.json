{
  "name": "minecraft-clone",
  "version": "1.0.0",
  "description": "Türkler tarafından geliştirilmiş Minecraft klonu",
  "type": "module",
  "main": "src/js/Start.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev": "vite",
    "android:create": "cordova create minecraft-android com.minecraft.clone MinecraftClone",
    "android:add": "cd minecraft-android && cordova platform add android",
    "android:build": "cd minecraft-android && cordova build android",
    "android:release": "cd minecraft-android && cordova build android --release"
  },
  "keywords": [
    "minecraft",
    "game",
    "three.js",
    "webgl"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "cordova": "^12.0.0"
  },
  "dependencies": {
    "three": "^0.128.0"
  }
}
